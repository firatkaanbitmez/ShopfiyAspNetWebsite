@model Deals

<h2>Create Deals</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
    <label asp-for="DealsType" class="control-label"></label>
    <select asp-for="DealsType" class="form-control" asp-items="Html.GetEnumSelectList<DealsType>()">
        <option value="">Select Deals Type</option>
    </select>
    <span asp-validation-for="DealsType" class="text-danger"></span>
</div>

    <div class="form-group">
        <label asp-for="DealsName"></label>
        <input asp-for="DealsName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DiscountPercentage"></label>
        <input asp-for="DiscountPercentage" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
