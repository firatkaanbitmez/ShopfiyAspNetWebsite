@model ShopAppProject.Data.Deals
@using System.ComponentModel.DataAnnotations

@{
    ViewData["Title"] = "Kendi Kampanyanızı Oluşturun";
}

<style>
    .form-check-input {
        position: absolute;
        opacity: 0;
        width: 0;
        height: 0;
    }

    .form-check-label {
        display: block;
        padding: 10px;
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        text-align: center;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s, color 0.3s;
    }

    .form-check-input:checked+.form-check-label {
        background-color: #007bff;
        color: white;
        border-color: #007bff;
    }

    .form-check-label:hover {
        background-color: #e2e6ea;
    }

    .nav-pills .nav-link {
        border-radius: 0.25rem;
        margin-bottom: 0.5rem;
        border: 1px solid #007bff;
        color: #007bff;
        background-color: #f8f9fa;
        transition: all 0.3s ease;
        padding: 12px 20px;
        box-shadow: 0 2px 4px rgba(0, 123, 255, 0.3);
    }

    .nav-pills .nav-link:hover {
        background-color: #e2e6ea;
        color: #0056b3;
        text-decoration: none;
    }

    .nav-pills .nav-link.active {
        color: #fff;
        background-color: #007bff;
        border-color: #007bff;
        box-shadow: 0 4px 8px rgba(0, 123, 255, 0.5);
    }

    /* Sol menü tasarımı */
    .tab-menu {
        margin-right: -10px;
        border-radius: 4px;
        padding: 40px;
        
        margin-bottom: 60px;
    }
    .row{
        padding-left: -50px;
    }

    /* Stil İyileştirmeleri */
.tab-menu {
    margin-right: -10px;
    border-radius: 4px;
    padding: 40px;
    margin-bottom: 60px;
}

/* .row'a ait stil düzeltmeleri */
.row {
    margin-left: -50px;
}

/* .nav-link'a ait stil düzeltmeleri */
.nav-pills .nav-link {
    border-radius: 0.25rem;
    margin-bottom: 0.5rem;
    border: 1px solid #007bff;
    color: #007bff;
    background-color: #f8f9fa;
    transition: all 0.3s ease;
    padding: 12px 20px;
    box-shadow: 0 2px 4px rgba(0, 123, 255, 0.3);
}

.nav-pills .nav-link:hover {
    background-color: #e2e6ea;
    color: #0056b3;
    text-decoration: none;
}

.nav-pills .nav-link.active {
    color: #fff;
    background-color: #007bff;
    border-color: #007bff;
    box-shadow: 0 4px 8px rgba(0, 123, 255, 0.5);
}

</style>

<div class="container py-4">
    <h2 class="mb-3">@ViewData["Title"]</h2>
           
        <div class="col-md-3 tab-menu" style="margin-left: -200px;">
            <ul class="nav flex-column nav-pills" id="myTabs">
                <li class="nav-item">
                    <a class="nav-link active" id="campaign-type-tab" data-bs-toggle="pill"
                        href="#campaign-type">Kampanya Bilgileri</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="campaign-specifics-tab" data-bs-toggle="pill"
                        href="#campaign-specifics">Kampanya Detayları</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="campaign-select-tab" data-bs-toggle="pill"
                        href="#campaign-select">Kampanya Kapsamı</a>
                </li>
            </ul>
        </div>
    <div class="row" style="margin-top: -250px; margin-left:250px;">
        <!-- Vertical Tab Navigation -->
 
        <!-- Tab Content -->
        <div class="col-md-9">
            <form asp-action="Create" method="post" id="dealsForm" class="needs-validation" novalidate>
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="campaign-type">
                        <!-- Campaign Type Selection -->
                        <div class="row g-3">
                            @foreach (var dealType in Enum.GetValues(typeof(ShopAppProject.Data.DealsType)))
                            {
                                var fieldInfo = dealType.GetType().GetField(dealType.ToString());
                                var attributes = (DisplayAttribute[])fieldInfo.GetCustomAttributes(typeof(DisplayAttribute), false);
                                var displayName = attributes.Length > 0 ? attributes[0].Name : dealType.ToString();

                                <div class="col-md-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="DealsType" id="dealType-@dealType"
                                            value="@dealType" onchange="showRelevantFields('@dealType')">
                                        <label class="form-check-label" for="dealType-@dealType">@displayName</label>
                                    </div>
                                </div>
                            }
                        </div>
                        <!-- Campaign Information Fields -->
                        <div class="row g-3 mt-3">
                            <!-- Campaign Name -->
                            <div class="col-md-6">
                                <label asp-for="DealsName" class="form-label">Kampanya Adı</label>
                                <input asp-for="DealsName" class="form-control" required>
                                <div class="invalid-feedback">Kampanya adı gereklidir.</div>
                            </div>
                            <!-- Campaign Description -->
                            <div class="col-md-6">
                                <label asp-for="DealsDescription" class="form-label">Kampanya Açıklaması</label>
                                <textarea asp-for="DealsDescription" class="form-control" required></textarea>
                                <div class="invalid-feedback">Kampanya açıklaması gereklidir.</div>
                            </div>
                            <!-- Start Date -->
                            <div class="form-group">
                                <label asp-for="StartDate" class="control-label">Başlangıç Tarihi</label>
                                <input asp-for="StartDate" class="form-control" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="EndDate" class="control-label">Bitiş Tarihi</label>
                                <input asp-for="EndDate" class="form-control" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                            
                        </div>

                    </div>
                    <!-- Placeholder for Dynamic Form Fields -->
                    <div class="tab-pane fade" id="campaign-specifics">

                    </div>
                    <div class="tab-pane fade" id="campaign-select">
                        <!-- Submit Button -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">Oluştur</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js"
        integrity="sha384-UoWvMSZp8U1YSF4+dXnjs+U0Fh7fe3lFiiBs2qtPcHqrI" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>
    <script>
        function showRelevantFields(selectedType) {
            var fieldsContainer = document.getElementById("campaign-specifics");
            fieldsContainer.innerHTML = '';
            switch (selectedType) {
                case 'DiscountPercentage':
                    addDiscountPercentageFields(fieldsContainer);
                    break;
                case 'DiscountPrice':
                    addDiscountPriceFields(fieldsContainer);
                    break;
                case 'DiscountCoupon':
                    addDiscountCouponFields(fieldsContainer);
                    break;
                case 'FreeShipping':
                    addFreeShippingFields(fieldsContainer);
                    break;
                case 'GiftProduct':
                    addGiftProductFields(fieldsContainer);
                    break;
                case 'CategoryDiscount':
                    addCategoryDiscountFields(fieldsContainer);
                    break;
                case 'PointEarning':
                    addPointEarningFields(fieldsContainer);
                    break;
                default:
                    fieldsContainer.innerHTML = '';
            }
        }

        function addDiscountPercentageFields(container) {
            container.innerHTML += '<div class="form-group"><label for="DPercentage">Discount Percentage</label><input type="number" class="form-control" name="DPercentage" /></div>';
            container.innerHTML += '<div class="form-group"><label for="DPercentageMinimumPrice">Minimum Price for Discount Percentage</label><input type="number" class="form-control" name="DPercentageMinimumPrice" /></div>';
        }

        function addDiscountPriceFields(container) {
            container.innerHTML += '<div class="form-group"><label for="DPrice">Discount Price</label><input type="number" class="form-control" name="DPrice" /></div>';
            container.innerHTML += '<div class="form-group"><label for="DPriceMinimumPrice">Minimum Price for Discount Price</label><input type="number" class="form-control" name="DPriceMinimumPrice" /></div>';
        }

        function addDiscountCouponFields(container) {
            container.innerHTML += '<div class="form-group"><label for="DCouponCode">Coupon Code</label><input type="text" class="form-control" name="DCouponCode" /></div>';
            container.innerHTML += '<div class="form-group"><label for="DCodeMinimumPrice">Minimum Price for Coupon Code</label><input type="number" class="form-control" name="DCodeMinimumPrice" /></div>';
        }

        function addFreeShippingFields(container) {
            container.innerHTML += '<div class="form-group"><label for="FSMinimumPrice">Minimum Price for Free Shipping</label><input type="number" class="form-control" name="FSMinimumPrice" /></div>';
        }

        function addGiftProductFields(container) {
            container.innerHTML += '<div class="form-group"><label for="GProductId">Gift Product ID</label><input type="number" class="form-control" name="GProductId" /></div>';
        }

        function addCategoryDiscountFields(container) {
            var categorySelectHtml = '<select class="form-control" name="ProductCategory">';
            categorySelectHtml += '<option value="">Select a Category</option>';

            // Assuming you populate categories here from ViewBag or similar
            // For example:
        @foreach (var category in ViewBag.ProductCategories)
        {
            <text>
                        categorySelectHtml += '<option value="@category.Value">@category.Text</option>';
            </text>
        }

                categorySelectHtml += '</select>';

            container.innerHTML += '<div class="form-group"><label for="CDiscountPercentage">Category Discount Percentage</label><input type="number" class="form-control" name="CDiscountPercentage" /></div>';
            container.innerHTML += '<div class="form-group"><label for="CDMinimumPrice">Minimum Price for Category Discount</label><input type="number" class="form-control" name="CDMinimumPrice" /></div>';
            container.innerHTML += '<div class="form-group"><label for="ProductCategory">Product Category</label>' + categorySelectHtml + '</div>';
        }

        function addPointEarningFields(container) {
            container.innerHTML += '<div class="form-group"><label for="Point">Points</label><input type="number" class="form-control" name="Point" /></div>';
        }
    </script>
}
