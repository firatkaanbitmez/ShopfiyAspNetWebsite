@model IEnumerable<ShopAppProject.Data.Deals>

@{
    ViewData["Title"] = "Deals Index";
}
<a asp-action="Create">Create New Deal</a>
<h2>Deals Index</h2>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.DealsType)</th>
            <th>@Html.DisplayNameFor(model => model.DealsName)</th>
            <th>@Html.DisplayNameFor(model => model.StartDate)</th>
            <th>@Html.DisplayNameFor(model => model.EndDate)</th>
            <th>Status</th>
            <th>İşlemler</th>

            <!-- Add additional headers for different deal types as needed -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.DealsType)</td>
                <td>@Html.DisplayFor(modelItem => item.DealsName)</td>
                <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <!-- Display additional fields based on the type of deal -->
                <td>
                    <a href="@Url.Action("Edit", new { id = item.DealsId })">Edit</a> |
                    <a href="@Url.Action("Details", new { id = item.DealsId })">Details</a> |
                    <a href="@Url.Action("Delete", new { id = item.DealsId })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
